<div class="center-top">
	<div id="user-meta" class="{{logged_in_class}}">
		<!-- if logged in -->
		<div class="pure-menu pure-menu-horizontal logged-in">
		    <ul class="pure-menu-list">
		        <li class="pure-menu-item pure-menu-has-children pure-menu-allow-hover">
		            <a href="/user/{{user.id}}" class="pure-menu-link user-meta-initial sw sw-fadeall">
						<span>{{user.username}}</span>
						<img id="user-avatar" src="{{user.avatar}}"></img>
					</a>
		            <ul class="pure-menu-children">
						<li class="pure-menu-item">
							<a class="pure-menu-link sw sw-fadeall" href="/user/{{user.id}}/settings">Settings</a>
						</li>
						<li class="pure-menu-item">
							<a class="pure-menu-link" href="/blog/article/post">Post Article</a>
						<li class="pure-menu-item">
							<a class="pure-menu-link" href="/blog/article/draft">Drafts</a>
						</li>
		                <li class="pure-menu-item">
							<form action="/user/logout" method="post" id="form-logout">
								<input name="redirecturl" type="hidden" value="{{this_url}}">
								<a class="pure-menu-link" href="#" onclick="document.getElementById('form-logout').submit();">Logout</a>
							</form>
						</li>
		            </ul>
		        </li>
		    </ul>
		</div>
		<!-- else -->
		<a href="/user/login?redirecturl={{this_url}}" class=" not-logged-in top-anchor sw sw-fadeall">Login</a>
	</div>
	<div class="center-top-inner">
		<nav class="pure-menu pure-menu-horizontal top-nav">
			<ul id="nav-top" class="pure-menu-list">
				<li class="pure-menu-item">
					<a href="/" class="pure-menu-link top-anchor sw sw-expandall">Index</a>
				</li>
				<li class="pure-menu-item">
					<a href="/blog" class="pure-menu-link top-anchor">Blog</a>
				</li>
				<li class="pure-menu-item">
					<a href="/about" class="pure-menu-link top-anchor sw sw-expandall">About</a>
				</li>
			</ul>
		</nav>
	</div>
</div>
